<body>
<div class="container">
  <div class="row">
    <div class="col-lg-12 col-md-7 col-lg-5 mx-auto">
      <div class="card card-signin my-5">
        <div class="card-body">
          <%= form_with(model: tournament, local: true) do |form| %>
            <% if tournament.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(tournament.errors.count, "error") %> prohibited this tournament from being saved:</h2>

                <ul>
                  <% tournament.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>


            <%= form.label :name %>
            <%= form.text_field :name, class: 'form-control', autofocus: true, required: true %>


            <%= form.label :tournament_date %>
            <%= form.datetime_field :tournament_date, class: 'form-control', required: true %>



            <%= form.label :contact_name %>
            <%= form.text_field :contact_name, class: 'form-control', required: true %>

            <%= form.label :contact_phone_number %>
            <%= form.phone_field :contact_phone_number, class: 'form-control', required: true %>

            <!-- #### ADDRESS FIELD STARTS HERE #### -->
            <div class="fields">

              <%= form.fields_for :address do |a| %>

              <%= a.label :street_address %>
              <%= a.text_field :street_address, id: :street_address, class: 'form-control', required: true %>

              <%= a.label :city %>
                <%= a.text_field :city, id: :city, class: 'form-control', required: true %>


                <%= a.label :state %>
                <%= a.text_field :state, id: :state, class: 'form-control', required: true %>



                <%= a.label :zip %>
                <%= a.number_field :zip, id: :zip, class: 'form-control', required: true %>

                </div>
                <% end %><!-- #### ADDRESS FIELD ENDS HERE #### -->

              <!--  <div class="field">-->
              <%#= form.label :user_id %>
              <%#= form.text_field :user_id %>
              <!--  </div>-->

              <%= form.submit yield(:button_text), class: "btn btn-info" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
</body>